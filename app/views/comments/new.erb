<form class="form-style-4" method="post" action="/posts/#{@post.id}/comments/new">
  <label class="input-group col-1-3">
    <input class="input-group-input" type="text" name="comment[title]">
    <span class="input-group-label"> Title:</span>
  </label>

  <label class="input-group col-1-3">
    <input class="input-group-input" type="text" name="comment[comment]">
    <span class="input-group-label"> Comment:</span>
  </label>

  <button type="submit" class="button dark">Post!</button>
</form>